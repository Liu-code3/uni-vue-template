{
	"easycom": {
		"autoscan": true,
		"custom": {
			"^u--(.*)": "uview-plus/components/u-$1/u-$1.vue",
			"^up-(.*)": "uview-plus/components/u-$1/u-$1.vue",
	        "^u-([^-].*)": "uview-plus/components/u-$1/u-$1.vue"
		}
	},
	"pages": [
		{ 
			"path": "pages/home/index",
			"style": {
				"enablePullDownRefresh": true
			}
		}
	],
	"subPackages":[
		{
			"root": "pagesA",
			"pages": [
				{ 
					"path": "pages/goodsItem/index",
					"style": {
						"navigationBarTitleText": "商品详情"
					}
				}
			]
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "绾青丝汉服社",
		"navigationBarBackgroundColor": "#7494D1",
		"backgroundColor": "#F8F8F8",
		"usingComponents": {  
			"comment-item": "/components/comment-item"  
		}
	}
}